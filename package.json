    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "artillery": "^2.0.23",
    "babel-jest": "^29.7.0",
    "clinic": "^12.1.0",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",

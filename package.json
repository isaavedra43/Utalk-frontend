{
  "name": "utalk-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Sistema de mensajer√≠a multicanal con CRM integrado - Frontend",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "type-check:staged": "tsc --noEmit --incremental",
    "validate": "npm run lint && npm run format:check && npm run type-check && npm run test:run",
    "validate:fast": "npm run lint && npm run format:check && npm run type-check:staged && npm run test:run",
    "clean": "rm -rf .svelte-kit build dist node_modules/.vite",
    "audit:security": "npm audit --audit-level moderate",
    "audit:deps": "npm outdated",
    "precommit": "lint-staged",
    "prepush": "npm run validate"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.536.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/svelte": "^5.2.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "bits-ui": "^2.9.1",
    "clsx": "^2.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-svelte": "^3.11.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "^1.3.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "5.5.4",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tanstack/svelte-query": "^5.61.5",
    "axios": "^1.7.8",
    "socket.io-client": "^4.8.1"
  },
  "securityNotes": {
    "knownVulnerabilities": [
      {
        "package": "cookie",
        "severity": "low",
        "description": "cookie accepts cookie name, path, and domain with out of bounds characters",
        "source": "SvelteKit dependency",
        "mitigation": "Waiting for SvelteKit update. Not critical for development.",
        "advisory": "https://github.com/advisories/GHSA-pxg6-pf52-xh8x"
      }
    ]
  }
}

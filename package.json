{
  "name": "omnichannel-backend",
  "version": "1.0.0",
  "description": "Backend omnicanal para sistema de mensajerÃ­a empresarial",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon server.js",
    "dev:frontend": "vite --host 0.0.0.0 --port 5173",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build --outDir dist",
    "build:backend": "echo 'Backend build completed - Node.js ready'",
    "build:railway": "npm run build:frontend",
    "postinstall": "if [ \"$RAILWAY_ENVIRONMENT\" ]; then npm run build:railway; else echo 'Development environment - skipping build'; fi",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.js client/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.js client/**/*.{ts,tsx} --fix",
    "logs": "tail -f logs/combined.log",
    "load-test": "artillery run tests/load/basic-load.yml",
    "stress-test": "artillery run tests/load/stress-test.yml",
    "create-admin": "node scripts/createAdmin.js",
    "backup": "node scripts/backup.js",
    "deploy": "npm run lint && npm run test:ci && npm run build",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "monitor": "clinic doctor -- node server.js",
    "flame": "clinic flame -- node server.js",
    "clean": "rm -rf dist node_modules/.vite",
    "preview": "npm run build && npm start"
  },
  "keywords": [
    "omnichannel",
    "whatsapp",
    "twilio",
    "messaging",
    "crm",
    "firebase",
    "express"
  ],
  "author": "Tu Empresa",
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-slow-down": "^2.1.0",
    "firebase-admin": "^11.10.1",
    "helmet": "^7.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "twilio": "^4.14.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "artillery": "^2.0.23",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.7.0",
    "clinic": "^12.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^8.13.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.32",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-empresa/omnichannel-backend.git"
  },
  "bugs": {
    "url": "https://github.com/tu-empresa/omnichannel-backend/issues"

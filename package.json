{
  "name": "omnichannel-backend",
  "version": "1.0.0",
  "description": "Backend omnicanal para sistema de mensajerÃ­a empresarial",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "logs": "tail -f logs/combined.log",
    "load-test": "artillery run tests/load/basic-load.yml",
    "stress-test": "artillery run tests/load/stress-test.yml",
    "create-admin": "node scripts/createAdmin.js",
    "backup": "node scripts/backup.js",
    "deploy": "npm run lint && npm run test:ci && npm run build",
    "build": "echo 'Build completed'",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "monitor": "clinic doctor -- node server.js",
    "flame": "clinic flame -- node server.js"
  },
  "keywords": [
    "omnichannel",
    "whatsapp",
    "twilio",
    "messaging",
    "crm",
    "firebase",
    "express"
  ],
  "author": "Tu Empresa",
  "license": "MIT",

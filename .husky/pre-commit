#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Ejecutar lint-staged
npx lint-staged

# Verificar que no hay archivos eslint/prettier rotos
if ! npm run lint --silent; then
  echo "âŒ ESLint errors found. Please fix them before committing."
  exit 1
fi

if ! npm run format:check --silent; then
  echo "âŒ Prettier formatting issues found. Please run 'npm run format' to fix them."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"

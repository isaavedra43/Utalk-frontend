# UTalk Frontend - Variables de Entorno
# IMPORTANTE: Copia este archivo según tu entorno:
# - Desarrollo local: cp .env.example .env.local
# - Staging: usar .env.staging (o configurar en Vercel/plataforma)
# - Producción: usar .env.production (o configurar en Vercel/plataforma)

# ========================================
# CONFIGURACIÓN DE API BACKEND
# ========================================

# URL base del API backend (SIN barra al final)
# Local: http://localhost:8000
# Staging: https://api-staging.utalk.com  
# Producción: https://api.utalk.com
VITE_API_URL=http://localhost:8000

# URL del WebSocket para tiempo real
# Local: ws://localhost:8080
# Staging: wss://ws-staging.utalk.com
# Producción: wss://ws.utalk.com
VITE_WS_URL=ws://localhost:8080

# Timeout para requests API en milisegundos
VITE_API_TIMEOUT=30000

# ========================================
# CONFIGURACIÓN DE ENTORNO
# ========================================

# Tipo de entorno (development, staging, production)
VITE_ENV=development

# Nivel de logging (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# Habilitar logging en consola del navegador (true/false)
VITE_ENABLE_CONSOLE_LOGS=true

# Hot Module Replacement en desarrollo (true/false)
VITE_HMR=true

# Puerto del servidor de desarrollo
VITE_PORT=5173

# Host del servidor de desarrollo
VITE_HOST=localhost

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# Tiempo de expiración de token JWT en minutos
# Desarrollo: 60, Staging: 45, Producción: 30
VITE_TOKEN_EXPIRY_MINUTES=60

# Tiempo antes de expiración para refresh automático (minutos)
# Debe ser menor que TOKEN_EXPIRY_MINUTES
VITE_TOKEN_REFRESH_MINUTES=50

# Habilitar autenticación de doble factor (true/false)
VITE_ENABLE_2FA=false

# Intentos máximos de login antes de bloqueo temporal
VITE_MAX_LOGIN_ATTEMPTS=5

# ========================================
# CONFIGURACIÓN DE APLICACIÓN
# ========================================

# Nombre de la aplicación (mostrado en UI)
VITE_APP_NAME=UTalk

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Descripción del entorno (mostrado en header de desarrollo)
VITE_APP_ENVIRONMENT=Development

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================

# Habilitar modo debug (logs adicionales, herramientas dev)
VITE_DEBUG_MODE=true

# Usar API mock en lugar de backend real (true/false)
VITE_MOCK_API=false

# Habilitar React DevTools en producción (SOLO para staging)
VITE_ENABLE_DEVTOOLS=true

# ========================================
# INTEGRACIÓN Y ANALYTICS
# ========================================

# Habilitar análisis de uso y telemetría (true/false)
VITE_ENABLE_ANALYTICS=false

# ID de Google Analytics (opcional)
# VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry DSN para reporte de errores (opcional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Hotjar ID para análisis de comportamiento (opcional)
# VITE_HOTJAR_ID=XXXXXXX

# ========================================
# CONFIGURACIÓN DE PERFORMANCE
# ========================================

# Habilitar monitoreo de performance (true/false)
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Habilitar reporte automático de errores (true/false)
VITE_ENABLE_ERROR_REPORTING=false

# Tamaño máximo de caché en MB
VITE_CACHE_SIZE_MB=50

# ========================================
# CDN Y ASSETS ESTÁTICOS
# ========================================

# URL base para assets estáticos (opcional)
# Local: no configurar (usa servidor local)
# Staging: https://cdn-staging.utalk.com
# Producción: https://cdn.utalk.com
# VITE_CDN_URL=

# URL para assets de usuario (avatares, archivos) (opcional)
# VITE_ASSETS_URL=

# ========================================
# CONFIGURACIÓN DE UI/UX
# ========================================

# Tema por defecto (light, dark, system)
VITE_DEFAULT_THEME=system

# Idioma por defecto (es, en, fr, etc.)
VITE_DEFAULT_LANGUAGE=es

# Habilitar animaciones y transiciones (true/false)
VITE_ENABLE_ANIMATIONS=true

# ========================================
# CONFIGURACIÓN AVANZADA
# ========================================

# Intervalo de heartbeat WebSocket en segundos
VITE_WS_HEARTBEAT_INTERVAL=30

# Máximo número de reintentos para conexión WebSocket
VITE_WS_MAX_RETRIES=3

# Habilitar service worker para caché offline (true/false)
VITE_ENABLE_SERVICE_WORKER=false

# ========================================
# NOTAS IMPORTANTES
# ========================================

# 🔒 SEGURIDAD:
# - NUNCA commits archivos .env con valores reales de producción
# - Variables que comienzan con VITE_ son públicas en el navegador
# - No incluyas claves privadas o secrets en variables VITE_

# 📁 ARCHIVOS POR ENTORNO:
# - .env.local (desarrollo local, git-ignored)
# - .env.staging (staging, configurar en plataforma)
# - .env.production (producción, configurar en plataforma)

# 🚀 DESPLIEGUE:
# - Vercel: Configurar en Project Settings > Environment Variables
# - Netlify: Configurar en Site Settings > Environment Variables
# - Otras plataformas: Consultar documentación específica
